<h2>Mis Reservas</h2>
<%= link_to "Nueva Reserva", new_reserva_path, class: "btn btn-success" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Fecha</th>
      <th>Estado</th>
      <th>Opción</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @reservas.each do |r| %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.fecha %></td>
        <td><%= r.estado %></td>
        <td><%= r.opcion.nombre if r.opcion %></td>
        <td>
          <%= link_to "Ver", r %> |
          <%= link_to "Editar", edit_reserva_path(r) %> |
          <%= link_to "Cancelar", r, method: :delete, data: { confirm: "¿Seguro?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
