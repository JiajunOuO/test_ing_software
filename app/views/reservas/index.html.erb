<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>📋 Lista de Reservas</h1>
    <div>
      <%= link_to "+ Nueva Reserva", new_reserva_path, class: "btn btn-success" %>
      <%= link_to "| Inicio", root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <% if @reservas.any? %>
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Fecha</th>
          <th>Estado</th>
          <th>Usuario ID</th>
          <th>Opción</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @reservas.each do |reserva| %>
          <tr>
            <td><%= reserva.id %></td>
            <td><%= reserva.fecha %></td>
            <td><%= reserva.estado %></td>
            <td><%= reserva.usuario_id %></td>
            <td><%= reserva.opcion.nombre %></td>
            <td>
              <%= link_to "👁️", reserva_path(reserva), class: "btn btn-info btn-sm" %>
              <%= link_to "✏️", edit_reserva_path(reserva), class: "btn btn-warning btn-sm" %>
              <%= button_to "❌", reserva_path(reserva), 
                    method: :delete, 
                    data: { confirm: '¿Estás seguro de cancelar esta reserva?' }, 
                    class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
